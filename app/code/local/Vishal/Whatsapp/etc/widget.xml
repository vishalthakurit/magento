<widgets>
    <whatsapp_whatsapp_view type="vishal_whatsapp/whatsapp_widget_view" translate="name description" module="vishal_whatsapp">
        <name>Whatsapp view</name>
        <description>Whatsapp view widget</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <whatsapp_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Whatsapp</label>
                <type>label</type>
                <helper_block>
                    <type>vishal_whatsapp/adminhtml_whatsapp_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Whatsapp</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>120</sort_order>
            </whatsapp_id>
        </parameters>
    </whatsapp_whatsapp_view>
    <whatsapp_whatsapp_link type="vishal_whatsapp/whatsapp_widget_link" translate="name description" module="vishal_whatsapp">
        <name>Whatsapp link</name>
        <description>Whatsapp link widget</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <whatsapp_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Whatsapp</label>
                <type>label</type>
                <helper_block>
                    <type>vishal_whatsapp/adminhtml_whatsapp_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Whatsapp</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>130</sort_order>
            </whatsapp_id>
        </parameters>
    </whatsapp_whatsapp_link>
</widgets>
